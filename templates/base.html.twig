<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
            <linK rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="icon" href="{{ asset('img/logo.jpg') }}">
        {% endblock %}


    </head>
    <body>
        <header>
            <nav>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col">
                            <h1><a class ="lien" href="{{ path('sortie') }}"><img class="logo" src="{{ asset('img/logo.jpg') }}" alt="Sortir.com">Sortir.com</a></h1>
                        </div>
                        <div class="col">
                            {% if app.user %}
                                <div class="menu-lien">
                                    {% if app.user.administrateur %}
                                        <a class="navLink" href="{{path('ville')}}" title="Villes">Villes</a>
                                        <a class="navLink" href="{{path('campus')}}" title="Campus">Campus</a>
                                    {% endif %}
                                    <a class="navLink" href="{{path('sortie')}}" title="Home">Accueil</a>
                                    <a class="navLink" href="{{path('participant_edit', {'id': app.user.id})}}" title="Mon profil">Mon profil</a>
                                    <a class="navLink" href="{{path('app_logout')}}" title="Logout">Se d√©connecter</a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        {# read and display all flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}


        {% block body %}
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/bootstrap.bundle.min.js') }}" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
